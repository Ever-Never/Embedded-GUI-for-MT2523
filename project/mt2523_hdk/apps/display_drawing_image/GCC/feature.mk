IC_CONFIG                             = mt2523
BOARD_CONFIG                          = mt2523_hdk

# Development board type: EVB, HDK
MTK_DEVELOPMENT_BOARD_TYPE = HDK

# NVDM
MTK_NVDM_ENABLE = y

# gnss
MTK_GNSS_ENABLE = n

# battery_management
MTK_SMART_BATTERY_ENABLE = y

# debug level: none, error, warning, and info
MTK_DEBUG_LEVEL = info

# bt module enable
MTK_BT_ENABLE                       = y
MTK_BLE_ONLY_ENABLE                 = y
MTK_BT_HFP_ENABLE                   = n
MTK_BT_AVRCP_ENABLE                 = n
MTK_BT_AVRCP_ENH_ENABLE             = n
MTK_BT_A2DP_ENABLE                  = n
MTK_BT_PBAP_ENABLE                  = n
MTK_BT_SPP_ENABLE                   = n

# TE enable, enable this feature will avoid tearing effect
MTK_TE_ENABLE = y